<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.tdtd.presentation.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailAdminFragment"
            app:destination="@id/detailAdminFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>

    <dialog
        android:id="@+id/roomDialogFragment"
        android:name="com.tdtd.presentation.ui.makeroom.RoomDialogFragment"
        android:label="RoomDialogFragment"
        tools:layout="@layout/room_bottom_sheet">
        <action
            android:id="@+id/action_roomDialogFragment_to_detailAdminFragment"
            app:destination="@id/detailAdminFragment" />
    </dialog>

    <dialog
        android:id="@+id/writeTextDialogFragment"
        android:name="com.tdtd.presentation.ui.reply.WriteTextDialogFragment"
        android:label="WriteTextDialogFragment"
        tools:layout="@layout/fragment_write_text" />

    <dialog
        android:id="@+id/recordVoiceDialogFragment"
        android:name="com.tdtd.presentation.ui.reply.RecordVoiceDialogFragment"
        android:label="RecordVoiceDialogFragment"
        tools:layout="@layout/fragment_record_voice" />

    <fragment
        android:id="@+id/detailAdminFragment"
        android:name="com.tdtd.presentation.ui.detail.DetailAdminFragment"
        android:label="DetailAdminFragment"
        tools:layout="@layout/fragment_detail_admin">
        <action
            android:id="@+id/action_detailAdminFragment_to_writeTextDialogFragment"
            app:destination="@id/writeTextDialogFragment" />
        <action
            android:id="@+id/action_detailAdminFragment_to_recordVoiceDialogFragment"
            app:destination="@id/recordVoiceDialogFragment" />
        <argument
            android:name="room_code"
            app:argType="string" />
        <argument
            android:name="created_at"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.tdtd.presentation.ui.detail.DetailUserFragment"
        android:label="DetailUserFragment"
        tools:layout="@layout/fragment_detail_user">
        <action
            android:id="@+id/action_detailUserFragment_to_recordVoiceDialogFragment"
            app:destination="@id/recordVoiceDialogFragment" />
        <action
            android:id="@+id/action_detailUserFragment_to_writeTextDialogFragment"
            app:destination="@id/writeTextDialogFragment" />
        <argument
            android:name="room_code"
            app:argType="string" />
    </fragment>

    <action
        android:id="@+id/action_global_mainFragment"
        app:destination="@id/mainFragment"
        app:popUpTo="@id/mainFragment"
        app:popUpToInclusive="true" />
</navigation>